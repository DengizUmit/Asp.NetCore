@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model AspNetCore.Models.Customer

<html xmlns="http://www.w3.org/1999/xhtml">

<head>

    <title> Update Customer </title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>

<body>

    <div class="container">

        <h3> Update Customer </h3>

        <form asp-action="UpdateCustomer" asp-controller="Home" method="post">

            <input type="hidden" name="id" value="@Model." />

            <div class="form-group">
                <label> First Name </label>
                <input type="text" name="firstName" class="form-control" value="@Model.FirstName" />
            </div>
            <div class="form-group">
                <label> Last Name </label>
                <input type="text" name="lastName" class="form-control" value="@Model.LastName" />
            </div>

            <div class="form-group">
                <label> Age </label>
                <input type="text" name="age" class="form-control" value="@Model.Age" />
            </div>

            <div class="form-group text-left">
                <button class="btn btn-primary" type="submit">Update</button>
            </div>

        </form>

    </div>

</body>

</html>